<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  <% answer_id = "#answer-#{@answer.id}" %>
  $('.flash').html('<%= j render "shared/flash_errors" %>');
  $('<%= answer_id %>').replaceWith('<%= j render @answer %>');
<% end %>